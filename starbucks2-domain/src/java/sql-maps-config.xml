<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <typeAliases>
        <typeAlias type="model.Card" alias="CARD"/>
        <typeAlias type="model.UserProfile" alias="USERPROFILE"/>
    </typeAliases>

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="org.postgresql.Driver"/>
                <property name="url" value="jdbc:postgresql://ambari.cfcktxhbpkfb.us-east-1.rds.amazonaws.com:5432/ambari"/>
                <property name="username" value="ambari"/>
                <property name="password" value="_get_password_from_doc"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="card.xml" />
        <mapper resource="user-profile.xml" />
    </mappers>

</configuration>
