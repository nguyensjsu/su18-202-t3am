<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ns.user_profile">

    <select id="list" resultType="CARD">
        SELECT * FROM sb_users WHERE uid = #{value}
    </select>

    <insert id="create" parameterType="CARD">
        INSERT INTO sb_users (uid, balance, fullName, password, date_added)
        VALUES(#(uid), #(balance), #(fullName), #(password), #(date_added));
    </insert>

</mapper>
